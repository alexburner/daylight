{
  "compilerOptions": {
    /* Make modules work good */
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    /* Make JSX work */
    "jsx": "react",
    /* Make code good */
    "strict": true,
    /* Make absolute-ish imports work */
    "baseUrl": ".",
    "paths": {
      "~*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}